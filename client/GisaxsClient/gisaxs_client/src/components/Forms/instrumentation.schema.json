        "x": {
          "type": "integer"
        },
        "y": {
          "type": "integer"
        },
        "z": {
          "type": "integer"
        }
      },
      "required": [ "x", "y", "z" ]
    },
    "repetions3d": {
      "type": "object",
      "default": {
        "x": 1,
        "y": 1,
        "z": 1
      },
      "properties": {
        "x": {
          "type": "integer"
        },
        "y": {
          "type": "integer"
        },
        "z": {
          "type": "integer"
        }
      },
      "required": [ "x", "y", "z" ]
    },
    "coordinate2d": {
      "type": "object",

      "default": {
        "x": 0,
        "y": 0
      },
      "properties": {
        "x": {
          "minimum": 0,
          "maximum": 2000,
          "type": "integer"
        },
        "y": {
          "minimum": 0,
          "maximum": 2000,
          "type": "integer"
        }
      },
