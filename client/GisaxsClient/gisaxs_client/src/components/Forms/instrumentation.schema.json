    "distribution": {
      "type": "object",
      "default": {
        "mean": 5,
        "stddev": 0
      },
      "properties": {
        "mean": {
          "type": "integer"
        },
        "stddev": {
          "type": "integer"
        }
      },
      "required": [ "mean", "stddev" ]
    },
    "refractionIndex": {
      "type": "object",
      "default": {
        "delta": 0.001,
        "beta": 1e-5
